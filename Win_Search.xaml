<Window x:Class="Win_Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Search" Height="110" Width="310" MouseDown="Window_MouseDown" WindowStyle="None" Loaded="Window_Loaded" ShowInTaskbar="False" AllowsTransparency="True" Background="{x:Null}" Topmost="True">
    <Grid Margin="10">
        <Rectangle Fill="#FFDCF1FF" RadiusY="12" RadiusX="12" Opacity="0.7"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,13,0,0" TextWrapping="Wrap" Text="Search for" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_Search" HorizontalAlignment="Left" Height="23" Margin="91,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191"/>
        <Button x:Name="Btn_Search" Content="Search" HorizontalAlignment="Right" Margin="0,0,65,10" VerticalAlignment="Bottom" Width="50" IsDefault="True" Background="White" Height="25"/>
        <Button x:Name="Btn_Cancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="50" IsCancel="True" Background="White" Height="25"/>

    </Grid>
</Window>
