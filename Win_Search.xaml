<Window x:Class="DesktopNote.Win_Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search" Height="110" Width="250" MouseDown="Window_MouseDown" WindowStyle="None" FontSize="10"
        Loaded="Window_Loaded" ShowInTaskbar="False" AllowsTransparency="True" Background="{x:Null}" Topmost="True" UseLayoutRounding="True">
    <Grid Margin="10">
        <Rectangle Fill="#FFDCF1FF" RadiusY="12" RadiusX="12" Opacity="0.7"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,13,0,0" TextWrapping="Wrap" Text="{StaticResource label_search_for}" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_Search" Height="23" Margin="80,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="TB_Search_TextChanged"/>
        <Button x:Name="Btn_Search" Content="{StaticResource button_search}" HorizontalAlignment="Right" Margin="0,0,65,10" VerticalAlignment="Bottom" Width="50" IsDefault="True" Background="White" Height="20" Click="Btn_Search_Click"/>
        <Button x:Name="Btn_Cancel" Content="{StaticResource button_cancel}" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="50" IsCancel="True" Background="White" Height="20" Click="Btn_Cancel_Click"/>
    </Grid>
</Window>
